{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Projects",
    "type": "object",
    "properties": {
        "projects": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "title": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "domain": {
                        "type": "string"
                    },
                    "technologies": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "codeUrl": {
                        "type": "string",
                        "format": "uri"
                    },
                    "demoUrl": {
                        "type": "string",
                        "format": "uri"
                    },
                    "highlights": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "image": {
                        "type": "string"
                    }
                },
                "required": [
                    "id",
                    "title",
                    "description",
                    "domain",
                    "technologies"
                ]
            }
        }
    },
    "required": [
        "projects"
    ]
}