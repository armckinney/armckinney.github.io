{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Skills",
    "type": "object",
    "properties": {
        "skills": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "category": {
                        "type": "string"
                    },
                    "url": {
                        "type": "string",
                        "format": "uri"
                    },
                    "relatedStories": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "relatedProjects": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                },
                "required": [
                    "name",
                    "category",
                    "url"
                ]
            }
        }
    },
    "required": [
        "skills"
    ]
}