{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Technologies",
    "type": "object",
    "properties": {
        "technologies": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "category": {
                        "type": "string"
                    },
                    "url": {
                        "type": "string",
                        "format": "uri"
                    }
                },
                "required": [
                    "name",
                    "category",
                    "url"
                ]
            }
        }
    },
    "required": [
        "technologies"
    ]
}