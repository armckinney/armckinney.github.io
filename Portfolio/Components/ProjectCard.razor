<div class="card">
    @if (!string.IsNullOrEmpty(Project.ImageUrl))
    {
        <img src="@Project.ImageUrl" alt="@Project.Title" class="card-img" />
    }
    <div class="card-body">
        <h3 class="card-title">@Project.Title</h3>
        <p class="card-text">@Project.Description</p>
        <div class="card-actions">
            @if (!string.IsNullOrEmpty(Project.RepoUrl))
            {
                <a href="@Project.RepoUrl" target="_blank" class="btn btn-outline" aria-label="View source code for @Project.Title">Code</a>
            }
            @if (!string.IsNullOrEmpty(Project.DemoUrl))
            {
                <a href="@Project.DemoUrl" target="_blank" class="btn btn-primary" aria-label="View demo for @Project.Title">Demo</a>
            }
        </div>
    </div>
</div>

@code {
    [Parameter]
    public ProjectModel Project { get; set; } = new();
}
